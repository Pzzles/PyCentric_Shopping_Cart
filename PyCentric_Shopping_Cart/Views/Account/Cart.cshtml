@model IEnumerable<PyCentric_Shopping_Cart.Models.Product>

<h2>Shopping Cart</h2>
<div style="margin-bottom: 20px;">
    <label for="sortOrder">Sort: </label>
    <select id="sortOrder" class="form-select" style="width: auto; display: inline-block;" onchange="sortCartItems(this.value)">
        <option value="asc">Ascending</option>
        <option value="desc">Descending</option>
    </select>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Priority</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@item.Priority</td>
                <td>
                    <form asp-action="RemoveItem" method="post" style="display:inline;">
                        <input type="hidden" name="itemId" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="ClearCart" method="post" style="margin-top: 20px;">
    <button type="submit" class="btn btn-warning">Clear Cart</button>
</form>
