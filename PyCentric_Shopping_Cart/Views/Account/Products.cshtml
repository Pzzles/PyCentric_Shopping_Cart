<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="card-container">
    @if (Model != null)
    {
        @foreach (var item in Model)
        {
            <div class="card" data-id="@item.Id" data-name="@item.Name" data-price="@item.Price" data-quantity="@item.Quantity" data-priority="@item.Priority">
                <div class="avatar"></div>
                <div class="footer">
                    @Html.DisplayFor(modelItem => item.Name)
                    <br />
                    @Html.DisplayFor(modelItem => item.Price)
                    <br />
                    <!-- Add a clickable icon -->
                    <button class="add-to-cart-btn" title="Add to cart" data-id="@item.Id">
                        <i class="fas fa-shopping-cart"></i>
                    </button>
                </div>
            </div>
        }
    }
</div>

